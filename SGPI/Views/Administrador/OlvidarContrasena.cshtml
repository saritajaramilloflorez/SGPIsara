@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "OlvidarContrasena";
    //Aca selecciono para que aparezca el layout
    Layout = "_LayoutSGPI";
}

<!--Aca titulo-->
 <br/>
 <br/>
<h1 align ="center">RECUPERA TU CUENTA</h1>
<br />

<h5 align="center">Por favor ingrese su usuario y correo electronico para recuperar su contraseña</h5>
<br />


<form>
    <center>
        <div class="form-group">
            <!--Aca un label-->
            <label for="usuariotxt">Usuario</label>
            <!--Aca un input-->
            <input asp-for="Idusuario" type="text" class="form-control col-sm-4" id="usuariotxt" requiered />
        </div>

        <div class="form-group">
            <label for="correoelectronico.txt">Correo Electronico</label>
            <input asp-for="Email" type="correoelectronico" class="form-control col-sm-4" id="correoelectronicotxt" requiered />
        </div>



       

        <!--Aca un botton con color-->

        <button type="button" class="btn btn-outline-danger" id="ingresarbtn type" submit>Enviar</button> &nbsp;
        <button type="button" class="btn btn-outline-primary" id="ingresarbtn type" submit>Volver</button>
    </center>
    <!--<button id="ingresarbtn type"submit>Ingresar</button> -->
</form>

